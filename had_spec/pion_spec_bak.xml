        <nrow>4 4 4 32</nrow>
    </Param>
    <Cfg>
        <cfg_type>SZINQIO</cfg_type>
        <cfg_file>./wilson_k0.1665_b5.32144_4by32_cfg_4000.lime</cfg_file>
